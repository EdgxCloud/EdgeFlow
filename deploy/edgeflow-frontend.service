[Unit]
Description=EdgeFlow Frontend Dev Server
After=network.target edgeflow-backend.service
Wants=edgeflow-backend.service

[Service]
Type=simple
User=admin
Group=admin
WorkingDirectory=/home/admin/edgeflow/web
ExecStart=/usr/bin/npx vite --host 0.0.0.0 --port 3000
Restart=always
RestartSec=5
Environment=NODE_ENV=development

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=edgeflow-frontend

[Install]
WantedBy=multi-user.target
